body,
html {
    font: 16px/1.4 Georgia, serif;
}

.page{
    max-width: 400px;
    padding: 2rem;
    margin: 0 auto;
    text-align center;
    user-select: none
}

.fifteen{
    width: 100%;
    padding-bottom 100%;
    background rgb(0, 2, 74);
    margin-bottom 1.5rem;    
    position relative;

    .item{
        position absolute;
        outline: none;
        left: 0;
        top: 0;
        width: 25%;
        height: 25%;
        margin: 0;
        padding: 0;
        border: none;
        background: #000;
        color: #fff;
        font-size: 2rem;
        cursor:pointer;
        box-shadow: inset 0 0 0 1px rgb(81, 8, 110);
        transition: transform .2s, filter 0.5s;


        &Val{
            margin: 8px;
            display: flex;
            align-items: center;
            justify-content: center;
            width: 84%;
            height: 84%;
            box-shadow: inset 0 0 0 2px rgb(104, 8, 110)
        }
    }

    &Won {
        .item{
            filter:brightness(200%)        
        }
    }   
}